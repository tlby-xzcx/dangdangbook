<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>my-center</title>
    <%- include common %>
    <style>
        body {
            padding-top: 70px;
        }
    </style>
</head>

<body>
    <%- include('head',{title:'my'})%>
    <div class="col-md-4">

        <form class="form-horizontal">
            <h3>个人中心 昵称：<%- result.nickname %></h3>
            <div class="form-group">
                <label for="username" class="col-sm-2 control-label">Username</label>
                <div class="col-sm-10">
                    <input type="text" disabled class="form-control" id="username" name="username"
                        placeholder="Username" value='<%- result.username %>'>
                </div>
            </div>
            <div class="form-group">
                <label for="nickname" class="col-sm-2 control-label">Nickname</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="nickname" name="nickname" placeholder="Nickname"
                        value='<%- result.nickname %>'>
                </div>
            </div>
            <div class="form-group">
                <label for="email" class="col-sm-2 control-label">Email</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="email" name="email" placeholder="Email"
                        value="<%- result.email %>">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> Remember me
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="button" class="btn btn-success" onclick="changeinfo()">确认修改</button>
                    <button type="button" class="btn btn-danger" onclick="location.href='/resetpwd'">重置密码</button>
                </div>
            </div>
        </form>
    </div>
    <%- include footer %>
    <script>
        function changeinfo() {
            $.ajax({
                url: '/users/changeinfo',
                type: 'post',
                data: {
                    nickname: $('#nickname').val(),
                    email: $('#email').val()
                }
            }).done(data => {
                if (data.code == 200) {
                    location.href = '/my';
                }
            })
        }
    </script>
</body>

</html>